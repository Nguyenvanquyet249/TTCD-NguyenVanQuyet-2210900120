@model IEnumerable<Webbandienthoai.Models.SanPham>


<h2>Sản Phẩm</h2>
<p>
    @Html.ActionLink("Create New Product", "Create")
</p>
<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(model => model.TenSP)</th>
        <th>@Html.DisplayNameFor(model => model.GiaBan)</th>
        <th>@Html.DisplayNameFor(model => model.SoLuongTon)</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.TenSP)</td>
            <td>@Html.DisplayFor(modelItem => item.GiaBan)</td>
            <td>@Html.DisplayFor(modelItem => item.SoLuongTon)</td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.MaSP }) |
                @Html.ActionLink("Details", "Details", new { id = item.MaSP }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.MaSP })
            </td>
        </tr>
    }
</table>
