@model Webbandienthoai.Models.SanPham


<h2>Xóa sản phẩm</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Product</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Product Name</dt>
        <dd>@Html.DisplayFor(model => model.TenSP)</dd>

        <dt>Price</dt>
        <dd>@Html.DisplayFor(model => model.GiaBan)</dd>

        <dt>Quantity</dt>
        <dd>@Html.DisplayFor(model => model.SoLuongTon)</dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-secondary" })
        </div>
    }
</div>
